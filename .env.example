# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=boathouse_db
DB_USER=db_user
DB_PASSWORD=db_password
DB_SSL=false

# Application Environment
NODE_ENV=development

# Google Sheets Configuration
GOOGLE_SHEETS_CREDENTIALS_PATH=./credentials/google-service-account.json
GOOGLE_SHEETS_SPREADSHEET_ID=spreadsheet_id_here
GOOGLE_SHEETS_ATHLETES_SHEET_NAME=Athletes
GOOGLE_SHEETS_BOATS_SHEET_NAME=Boats
GOOGLE_SHEETS_PRACTICE_SESSIONS_SHEET_NAME=Practice Sessions

# ETL Configuration
ETL_BATCH_SIZE=100
ETL_RETRY_ATTEMPTS=3
ETL_RETRY_DELAY_MS=5000
ETL_LOG_LEVEL=info

# Authentication Service Configuration
AUTH_PORT=3000
JWT_SECRET=super-secret-jwt-key # run node -e "console.log(require('crypto').randomBytes(64).toString('hex'))" to generate a new secret
JWT_EXPIRES_IN=7d # JWT token expiry (7 days for extended sessions)
CORS_ORIGIN=http://localhost:5173,http://localhost:3001
DEFAULT_PIN=your-default-pin-here
MAX_LOGIN_ATTEMPTS=3
LOCKOUT_DURATION_MINUTES=15